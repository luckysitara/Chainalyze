#!/bin/bash

# Check if a commit message was provided
if [ -z "$1" ]; then
  echo "âŒ Commit message is required."
  echo "Usage: ./remote \"your commit message\""
  exit 1
fi

# Combine all arguments as the commit message
commit_message="$*"

# Git automation
echo "ğŸ“‚ Adding changes..."
git add .

echo "ğŸ“ Committing with message: \"$commit_message\""
git commit -m "$commit_message"

echo "ğŸ“¤ Pushing to remote..."
git push

echo "âœ… Done."
